<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <File name = "LogToFile" filename = "logs/app.log" append = "true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%p] [%c] [%t] - %m%n" />
        </File>
    </Appenders>

    <Loggers>
        <Logger name = "core.basesyntax" level = "info" addivity = "true">
            <AppenderRef ref = "LogToFile"/>
        </Logger>
        <Root level = "error">
            <Appender ref = "LogToFile"/>
        </Root>
    </Loggers>
</Configuration>